<%= form_for @hospital_personnel do |f| %>

    <div class="form-group">
      <%= f.label :surname %><br>
      <%= f.text_field :surname %>
    </div>

    <div class="form-group">
      <%= f.label :year_of_birth %><br>
      <%= f.select :year_of_birth, (select_helper_personnel_type(check_year_list)) %>
    </div>

    <div class="form-group">
      <%= f.label :position %><br>
      <%= f.select :position, (select_helper_personnel_type(HospitalPersonnel::POSITIONS)) %>
    </div>

    <div class="actions">
      <%= f.submit 'Сохранить', class: 'btn btn-primary' %>

      <% if @hospital_personnel.persisted? %>
          <%= link_to 'Удалить сотрудника', hospital_personnel_path(@hospital_personnel), method: :delete, data: {confirm: 'Действительно ли вы хотите удалить сотрудника?'}, class: 'btn btn-danger' %>
      <% end %>
      или <%= link_to 'вернуться', :back %>
    </div>
<% end %>