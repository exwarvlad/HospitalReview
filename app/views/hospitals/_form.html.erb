<%= form_for(@hospital) do |f| %>

    <%= render partial: 'partials/form_errors', locals: {model: @hospital} %>

    <div class="form-group">
      <%= f.label :phone %><br>
      <%= f.text_field :phone %>
    </div>

    <div class="action buffer-bottom">
      <%= f.submit 'Сохранить', class: 'btn btn-primary' %>
      или <%= link_to 'вернуться', :back %>
    </div>
<% end %>